{
    "defaultCppStandard": "20",

    "output": {
        "_cpp_base_executable_": {
            "type": "executable",
            "mainFile": "main.cpp",
            "rSourceDirs": [ "src" ],
            "rHeaderDirs": [ "include" ],
            "includeDirs": [ "include" ]
        }
    },

    "buildTargets": {
        "Debug": {
            "gccOnlyFlags": [
                "-Og",
                "-g",
                "-Wall",
                "-Wextra",
                "-Wconversion",
                "-Wuninitialized",
                "-pedantic",
                "-pedantic-errors",
                "-fanalyzer"
            ],
            "clangOnlyFlags": [
                "-Og",
                "-g",
                "-Wall",
                "-Wextra",
                "-Wconversion",
                "-Wuninitialized",
                "-pedantic",
                "-pedantic-errors"
            ],
            "msvcOnlyFlags": [
                "/Od",
                "/W4"
            ]
        },

        "Release": {
            "gccOnlyFlags": [
                "-O3",
                "-s"
            ],
            "clangOnlyFlags": [
                "-O3",
                "-Wl,-s"
            ],
            "msvcOnlyFlags": [
                "/O2"
            ],
           "defines": [
               "NDEBUG"
            ]
        },

        "Size-Optimized-Release": {
            "gccOnlyFlags": [
                "-Os",
                "-s"
            ],
            "clangOnlyFlags": [
                "-Os",
                "-Wl,-s"
            ],
            "msvcOnlyFlags": [
                "/O1"
            ],
            "defines": [
                "NDEBUG"
            ]
        }
    }
}
